{
  "layer": "top",
  "include": [
    "~/.config/waybar/modules.jsonc"
  ],
  "modules-left": [
    "group/menu",
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "group/info",
    "tray",
    "group/time"
  ],
  "group/info": {
    "orientation": "inherit",
    "modules": [
      "group/volume",
      "custom/separator",
      "group/hardware",
      "custom/separator",
      "network",
      "group/group-tray",
      "custom/separator"
    ]
  },
  "group/time": {
    "orientation": "inherit",
    "modules": [
      "clock"
    ]
  },
  "group/hardware": {
    "orientation": "inherit",
    "modules": [
      "custom/hardware",
      "memory",
      "custom/separator",
      "cpu",
      "custom/separator",
      "disk",
      "custom/separator"
    ],
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false,
      "click-to-reveal": true
    }
  },
  "group/menu": {
    "orientation": "inherit",
    "modules": [
      "custom/apps",
      "custom/separator",
      "custom/power",
      "custom/separator",
      "custom/sleep",
      "custom/separator",
      "custom/lock",
      "custom/separator",
      "idle_inhibitor",
      "custom/separator"
    ],
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": true
    }
  },
  "group/volume": {
    "orientation": "inherit",
    "modules": [
      "pulseaudio",
      "pulseaudio/slider"
    ],
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    }
  }
}
